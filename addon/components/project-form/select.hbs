<select
  class="uk-width-1 uk-select"
  name={{@attr}}
  required={{@required}}
  ...attributes
>
  <option value="">
    {{t (concat @translationBase "." @attr "Placeholder")}}
  </option>
  {{#each @options as |optionValue|}}
    <option selected={{eq optionValue @value}} value={{optionValue}}>
      {{t (concat @translationBase "." @attr "Options." optionValue)}}
    </option>
  {{/each}}
</select>
