<select
  class="uk-width-1 {{configured-classes "select"}}"
  name={{@attr}}
  required={{@required}}
  ...attributes
>
  <option value="">
    {{t (concat "ember-gwr.constructionProject.fields." @attr "Placeholder")}}
  </option>
  {{#each @options as |optionValue|}}
    <option selected={{eq optionValue @value}} value={{optionValue}}>
      {{t (concat "ember-gwr.constructionProject.fields." @attr "Options." optionValue)
      }}
    </option>
  {{/each}}
</select>
