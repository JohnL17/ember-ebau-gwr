<div
  class={{concat (unless @noMargin "uk-margin") " " (if @horizontal "uk-flex")}}
>
  <label
    for={{@attr}}
    class={{concat
      "uk-text-bold "
      (if @horizontal "uk-margin-left uk-flex-last")
    }}
  >
    {{t (concat @translationBase "." @attr)}}
    {{#if @required}}
      <span class="required-indicator">*</span>
    {{/if}}
  </label>
  {{yield}}
</div>
