<div class="uk-flex uk-flex-column uk-flex-right">
  <div class="uk-flex-inline uk-flex-right uk-flex-middle">
    {{#if (and @hasImport @import)}}
      <button
        class="uk-button uk-button-default uk-margin-small-right"
        type="button"
        {{on "click" @importAllData}}
      >
        {{t "ember-gwr.components.projectForm.applyAll"}}
      </button>
      <LinkTo
        @query={{hash import=false}}
        class="uk-button uk-button-default uk-margin-small-right"
      >
        {{t "ember-gwr.components.projectForm.cancelImport"}}
      </LinkTo>
    {{/if}}
    {{#let @submit as |Submit|}}
      <Submit />
    {{/let}}
    {{#if (or @hasImport @hasStatus)}}
      <button
        class="uk-button uk-button-default uk-padding-small uk-padding-remove-vertical"
        type="button"
      >
        <span class="uk-icon" uk-icon="more-vertical"></span>
      </button>
      <div
        uk-dropdown="mode: click; pos: bottom-right; offset: 20"
        class="uk-padding-small"
      >
        <ul
          class="uk-nav uk-dropdown-nav uk-list uk-list-divider uk-list-collapse"
        >
          {{#if @hasImport}}
            <li>
              {{#if this.project.isNew}}
                <button
                  disabled={{@import}}
                  class="uk-button uk-text-left uk-highlight-hover uk-text-secondary uk-width-1-1 uk-background-default uk-padding-remove"
                  type="button"
                  {{on "click" @importAllData}}
                >
                  {{t "ember-gwr.components.projectForm.importFromCaluma"}}
                </button>
              {{else}}
                <LinkTo
                  @disabled={{@import}}
                  @query={{hash import=true}}
                  class="uk-button uk-text-left uk-highlight-hover
                    {{if @import "uk-text-muted" "uk-text-secondary"}}
                    uk-width-1-1 uk-background-default uk-padding-remove"
                >
                  {{t "ember-gwr.components.projectForm.importFromCaluma"}}
                </LinkTo>
              {{/if}}
            </li>
          {{/if}}
          {{#if @hasStatus}}
            <li>
              <button
                class="uk-button uk-text-left uk-highlight-hover uk-text-secondary uk-width-1-1 uk-background-default uk-padding-remove"
                type="button"
                {{on "click" @openStatus}}
              >
                {{t "ember-gwr.components.projectForm.changeStatus"}}
              </button>
            </li>
          {{/if}}
        </ul>
      </div>
    {{/if}}
  </div>
  <div class="uk-margin-small-top uk-flex uk-flex-right">
    {{#let @submitErrors as |SubmitErrors|}}
      <SubmitErrors />
    {{/let}}
  </div>
</div>
